{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn generate",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "懒番茄",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "execute": false,
        "open": true,
        "scope": [],
        "sidecar": false
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/logo-24.png",
        "icons/logo-24@2x.png",
        "icons/logo-24@3x.png",
        "icons/logo-36.png",
        "icons/logo-36@2x.png",
        "icons/logo-36@3x.png",
        "icons/logo-128.png",
        "icons/logo-128@2x.png",
        "icons/logo-128@3x.png",
        "icons/logo-512.icns",
        "icons/logo-512.ico"
      ],
      "identifier": "com.lazy-pomodoro.penggeor.com",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 500,
        "width": 400,
        "minHeight": 500,
        "minWidth": 400,
        "resizable": true,
        "title": "Lazy Pomodoro",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ]
  }
}
